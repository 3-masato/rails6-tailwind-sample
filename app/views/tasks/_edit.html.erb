<%= form_with model: task, local: false do |f| %>
  <div class="flex items-center gap-2 relative">
    <div id="update-error" class="bottom-[calc(100%_+_0.25rem)] absolute"></div>
    <%= f.text_field :title,
    class: "w-96 py-2 px-3 leading-6 border border-gray-200 rounded-sm text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
    <%= render(ButtonComponent.new(
      style: :outline,
      color: :gray,
      options: {
        id: "cancel-#{task.hashed_id}",
        type: "button",
        class: "w-8 h-8"
      }
    )) do %>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
    <%= render(ButtonComponent.new(
      style: :outline,
      color: :green,
      options: {
        type: "submit",
        class: "w-8 h-8"
      }
    )) do %>
      <i class="fa-solid fa-check"></i>
    <% end %>
  </div>
<% end %>