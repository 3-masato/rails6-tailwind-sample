<div>
  <h1 class="font-bold text-4xl text-inherit">Todos</h1>

  <%= render "tasks/form", task: Task.new %>

  <table>
    <tbody>

    <% @tasks.each do |task| %>
    <tr>
      <td>
        <div class="font-medium" id="<%= task.hashed_id %>">
          <%= render "tasks/task", task: task %>
        </div>
      </td>
      <td>
        <div class="text-slate-700 dark:text-slate-500"><%= l task.created_at %></div>
      </td>
      <td>
        <%= link_to task_path(task), method: :delete, class: "focus-ring disabled-gray no-underline py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-sm border border-red-500 text-red-500 hover:border-red-400 hover:text-red-400" do %>
          Destroy
        <% end %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </ul>
</div>
